<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
<!--         <form-bean name="LoginForm" type="log619lab5.struts.general.forms.LoginForm"/> -->
<!--         <form-bean name="ContactUsForm" type="log619lab5.struts.general.forms.ContactUsForm"/> -->
<!--         <form-bean name="SubscribeForm" type="log619lab5.struts.general.forms.SubscribeForm"/> -->
        <form-bean name="AbstractForm" type="log619lab5.struts.AbstractForm"/>
<!--         <form-bean name="AddMailUserForm" type="log619lab5.struts.admin.AddMailUserForm"/> -->
    </form-beans>
    
   <global-exceptions>
	    <exception
	      key="error.global.mesage"
	      type="java.io.IOException"
	      handler="log619lab5.struts.GeneralException"
	      path="/WEB-INF/jsp/general/welcome.jsp" />
	</global-exceptions>

	<global-forwards>
		<forward name="Login" path="/Login.do"/>
<!-- 		<forward name="Logout" path="/Logout.do"/> -->
        <forward name="Welcome" path="/Welcome.do"/>
<!--         <forward name="ContactUs" path="/ContactUs.do"/> -->
<!--         <forward name="Subscribe" path="/Subscribe.do"/> -->
<!--         <forward name="Promotion" path="/Promotion.do"/> -->
<!--         <forward name="PriceList" path="/PriceList.do"/> -->
<!--         <forward name="WebsitePlan" path="/WebsitePlan.do"/> -->
<!--         <forward name="LegalMention" path="/LegalMention.do"/> -->
        <forward name="AccessDenied" path="/AccessDenied.do"/>
<!--         <forward name="Service" path="/Service.do"/> -->
<!--         <forward name= "MemberSection" path= "/MemberSection.do"/> -->
    </global-forwards>

    <action-mappings>        
        <action path="/Welcome" type="log619lab5.struts.general.actions.WelcomeAction" name="AbstractForm" scope="session">
        	<forward name="success" path="/WEB-INF/jsp/general/welcome.jsp" />
        </action>
        
        <action path="/AccessDenied" type="log619lab5.struts.general.actions.AccessDeniedAction" name="AbstractForm" scope="session">
        	<forward name="success" path="/WEB-INF/jsp/AccessDenied.jsp" />
        </action>
        
        <action path="/Login" type="log619lab5.struts.general.actions.LoginAction" name="AbstractForm" scope="session">
        	<forward name="success" path="/WEB-INF/jsp/general/login.jsp" />
        </action>
        
        <action path="/ExecuteLogin" type="log619lab5.struts.general.actions.ExecuteLoginAction" scope="session">
        	<forward name="admin" path="/WEB-INF/jsp/administration/admin.jsp" />
        	<forward name="carre" path="/WEB-INF/jsp/forme/carre.jsp" />
        	<forward name="cercle" path="/WEB-INF/jsp/forme/cercle.jsp" />
        	<forward name="failure" path="/WEB-INF/jsp/AccessDenied.jsp" />
        </action>
        
        <action path="/Navigate" type="log619lab5.struts.administration.actions.NavigateAction" scope="session">
        	<forward name="carre" path="/WEB-INF/jsp/forme/carre.jsp" />
        	<forward name="cercle" path="/WEB-INF/jsp/forme/cercle.jsp" />
        	<forward name="failure" path="/WEB-INF/jsp/404.jsp" />
        </action>
        
        <action path="/SaveConfiguration" type="log619lab5.struts.administration.actions.SaveConfigurationAction" scope="session">
        	<forward name="success" path="/WEB-INF/jsp/general/admin.jsp" />
        </action>
        
    </action-mappings>

</struts-config>